<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Robot Profiles</title>
  </head>
  <body>
    <div class="profileDiv">
      {{#user}}
      <div class="profileAvatar">
        <img class="avatars" src="{{avatar}}" alt="">
      </div>
      <div class="profileInfo">
        <h1 class="name">{{name}}</h1>
        <h4 class="jobInfo">
          {{job}},
          {{company}}
        </h4>
      </div>
      <div class="contactInfo">
        <h4 id="contact">{{email}} | {{phone}}</h4>
      </div>
      <div class="education">
        <h4 id="educationHeader">Education</h4>
        <h4 id="university">{{university}}</h4>
      </div>
      <div class="skills">
        <h4 id=skillsHeader>Skills</h4>
        <h4 id=skillsList>{{skills}}</h4>
      </div>
      <div class="editDiv">
        <div class="edit">
          <a href="/users/{{_id}}/edit">Edit</a>
        </div>
        <div class="delete">
          <a href="/users/{{_id}}/delete">Delete</a>
        </div>
      </div>
      {{/user}}
      
    </div>
  </body>
</html>
